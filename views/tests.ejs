<%- include("./partials/header.ejs") %>

<div class="tests content">
  <h2>All Tests</h2>
  <% if (tests.length > 0) { %>
  <% tests.forEach(test => { %>

  <h3 class="title"><%= test.question %></h3>
  <ol>
      <li><%= test.answer1 %></li>
      <li><%= test.answer2 %></li>
      <li><%= test.answer3 %></li>
      <li><%= test.answer4 %></li>
      <h3>Correct answer 
      <select name="correctAnswer" id="">
        <option selected="yes"></option>
        <option >1</option>
        <option >2</option>
        <option >3</option>
        <option >4</option>
      </select></h3>
  </ol>
  
  <% }) %>
  <% } else { %>
  <p>There are no tests to display...</p>
  <% } %>

</div>

<%- include("./partials/footer.ejs") %>